<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#272727"
        android:id="@+id/native_title_bar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/native_request"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/native_request"
            android:layout_toLeftOf="@+id/native_request"
            android:gravity="center"
            android:text="Native"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/native_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Request"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/native_title_bar"
        android:minHeight="250dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/native_content"
            android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/native_banner"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:maxHeight="150dp"
            android:minHeight="150dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/native_icon"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:layout_below="@+id/native_banner"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/native_title"
            android:layout_below="@+id/native_banner"
            android:layout_toRightOf="@+id/native_icon"
            android:layout_toEndOf="@+id/native_icon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/native_icon"
            android:layout_alignBottom="@+id/native_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/native_cta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/native_icon"
            android:layout_marginTop="5dp"/>

        </RelativeLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/native_progressBar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>