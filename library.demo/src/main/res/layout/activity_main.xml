<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e1e1e">

    <Button
        android:id="@+id/activity_main_btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#650067"
        android:onClick="onSettingsClick"
        android:padding="20dp"
        android:text="SETTINGS"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_separator"
        android:layout_centerHorizontal="true"
        android:onClick="onNativeClick"
        android:text="Native" />

    <Button
        android:id="@+id/buttonInterstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:onClick="onInterstitialClick"
        android:text="Interstitial" />

    <Button
        android:id="@+id/button_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonInterstitial"
        android:layout_centerHorizontal="true"
        android:onClick="onBannerClick"
        android:text="Banner" />

    <Button
        android:id="@+id/buttonInFeedBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_banner"
        android:layout_centerHorizontal="true"
        android:onClick="onInFeedBannerClick"
        android:text="InFeed Banner" />

    <TextView
        android:id="@+id/activity_main_separator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activity_main_btn_settings"
        android:background="#4b4b4b"
        android:gravity="center"
        android:text="Formats"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
